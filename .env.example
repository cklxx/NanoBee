# Backend configuration
NANOBEE_DATABASE_URL=sqlite:///./data.db
NANOBEE_WORKSPACES_ROOT=./workspaces
# Optional OpenAI key for real LLM usage
NANOBEE_OPENAI_API_KEY=
# Comma-separated origins allowed to call the API (JSON array is also accepted)
NANOBEE_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000","http://127.0.0.1:3001"]
# Optional overrides for OpenAI-compatible endpoints and models
NANOBEE_OPENAI_BASE_URL=
NANOBEE_OPENAI_MODEL=gpt-4o-mini
# Allow DummyLLM for local demos (set to 1 to enable; leave empty/0 for real environments)
NANOBEE_ALLOW_DUMMY_LLM=0

# Frontend configuration
NEXT_PUBLIC_API_BASE=http://localhost:8000
